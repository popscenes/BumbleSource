
@using System.Web.Optimization
@model PostaFlya.Models.Flier.BulletinDetailPageModel

@{
    ViewBag.Title = "DetailGet";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

@section title
{
    @if (Model.Detail != null)
    {
        @:Popscenes - @Model.Detail.Flier.Title

    }
    else
    {
        @:Popscenes - Discover Local Gigs
    } 

}

@section scripts
{
    @Scripts.Render("~/Script/BulletinDeskJs.js")
    <script src='http://connect.facebook.net/en_US/all.js'></script>
}

@Html.Partial("Bulletin/DetailTileTemplates", Model.Detail)

@Html.Partial("DetailViewPartial", Model.Detail)
