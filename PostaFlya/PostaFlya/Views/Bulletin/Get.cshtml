
@using System.Web.Optimization
@using PostaFlya.Models
@model PostaFlya.Models.Flier.BulletinBoardPageModel


@{
    ViewBag.Title = "Popscenes - Discover Local Cultural Happenings";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

@section scripts
{
    @Scripts.Render("~/Script/BulletinDeskJs.js")
}

@{
    WebConstants.SetViewBagForLocationPicker(ViewBag);
}

<div id="controls">
    <div class="location-title">
        Discover Cultural Happenings near
    </div>
    <div>
        <div class="locSel">                                                           
            <div class="current-loc" data-bind="click: TryFindLocation"></div>                
                @Html.Partial("Location/LocationAutocomplete") 
            </div>
        </div>
    <div class="dist-selector-container" data-bind="touchHover: '.dist-selector-container', visible: Location().ValidLocation()">        
        Within <span class="distance-selected" data-bind="text: @ViewBag.DistanceVariable"></span>km
        <ul class="dist-selector" data-bind="distanceDropDown: @ViewBag.DistanceVariable">
        </ul>
    </div>
    <input id="bulletin" data-bind="datePicker:{onSelect: $data.setDate}" type="hidden"/>
    <div id="bulletin-date" class="dist-selector-container" data-bind="dateToggle:'bulletin'">
        <span data-bind="text:displayDate"></span>
    </div>
    
    
    <div style="clear: both;"></div>
    <div data-bind="with:$root.tagsSelector" class="bulletin-tags-selector">
        <label>I'm only interested in</label>
        @Html.Partial("Tags/TagsSelector")
    </div>
</div>
   
@Html.Partial("Bulletin/SelectedBulletinViewPartial")
@Html.Partial("Bulletin/BulletinList", Model.Fliers)




