
@Html.Partial("State/PageStateAdd", "Location")

<div class="ls-holder">
  
   <div data-bind="click: toggleShowMain, visible:!displayInline()" class="Button" id="btn-location">Location</div>
   <input id="locationSearch" type="text" data-bind="value:description"/>

    <div id="lsMain" data-bind="visible: showMain">
        <div data-bind="attr:{id:mapElementId}" class="map" style="width: 70%; height: 450px;"></div>
    
        <div class="locationTypeChoice" data-bind="visible: locationType() =='saved'">
            Saved Locations
            <select  data-bind="options:savedLocations, optionsCaption:'Choose Saved Location', optionsText: 'Description', mapBinding: currentLocation"> </select>
        </div>

        <div data-bind="visible: ValidLocation()==false">
            Please enter your current location
        </div>

    </div>
</div>
