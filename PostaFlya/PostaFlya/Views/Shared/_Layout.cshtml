
@using System.Web.Optimization
@using Website.Common.Extension
@using PostaFlya.Models.Flier

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@RenderSection("title", required: false)</title>

        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
        <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
        <link href='http://fonts.googleapis.com/css?family=Lobster' rel='stylesheet' type='text/css'>
        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true&libraries=places&region=AU"></script>

        @* TODO add theme resolution to replace taskflya as needed in themes/taskflya/themedeskcss*@  
        @Styles.Render("~/Content/structure/DeskCss.css")  
        @Styles.Render("~/Content/themes/taskflya/DeskCss.css")           
        @Scripts.Render("~/Script/DeskJs.js")     
        
        @Html.Partial("State/PageState")   
            
        @RenderSection("scripts", required: false)
    </head>
    <body>
        <header>
            <div id="left-header">
               @Html.Partial("Header/GlobalLeftToolbar")
            </div>

            <a id="logo" data-helptip-group="about-posta" data-helptip-text="" href="@Url.Action("Get", "Bulletin")">
                <div data-helptip-group-content="about-posta" style="display: none">                               
                    <h3>Postaflya is your Local Community Noticeboard.</h3>
                    <div>
                        Put Ya Flyas Online!
                        <ul class="about-list">
                            <li>
                                Simply upload your Flya and post it to your Local Community Area.                         

                            </li>    
                            <li>
                                You can physically print off your Flya with QR codes and Urls to enable people to find your Flya online by snapping it on their phone or taking a tear off.   
                            </li>
                        </ul> 
                            
                    </div>
                    <div>
                        Browse Community content
                        <ul class="about-list">
                            <li>
                                Simply search for your Local Community Area or Suburb.                         
                            </li>    
                            <li>
                                Tear off, or bookmark, Flyas you are interested in and we'll email the details directly to you as well as calendar entries and/or contact details.         
                            </li>
                            <li>
                                Revisit any time to find Flyas you have bookmarked 
                            </li>
                        </ul> 
                    </div>
                </div>
                     
            </a>
            <div id="right-header">
                @RenderSection("rightheader", required: false)
            </div>
            
                       
            @Html.Action("BrowserInfo", "BrowserInformation")    
                
        </header>
            <div id="body">
                <section class="content-wrapper main-content clear-fix">
                    @RenderBody()
              
            
                    @if (Request.IsAuthenticated)
                    {
                        <div id="create-flier-popup-overlay" data-bind="visible:CreateFlierInstance.CreateFlier"></div>
                        <div id="create-flier-item-div" data-bind="with:CreateFlierInstance.CreateFlier, visible:CreateFlierInstance.CreateFlier, absolutePosFromScroll: CreateFlierInstance.CreateFlier">
                            <a class="close-button mini-button red-button" data-bind="click:$root.CreateFlierInstance.FlierFormClose">close</a>
                          
                            <div class="toolbar-button question-tool-bar-item" data-bind="helpTipTrigger: HelpTipPage, helpGroups: HelpTipGroups"></div>
                            
                            @Html.Partial("Flier/CreateEdit", FlierCreateModel.DefaultForTemplate())

                        </div>
            
                    }
                </section>
            
            </div>
            <footer>
                <div class="content-wrapper">
                    <div class="float-left">
                        <p>&copy; @DateTime.Now.Year - Postaflya pty ltd</p>
                    </div>

                </div>
            </footer>

    </body>
</html>
