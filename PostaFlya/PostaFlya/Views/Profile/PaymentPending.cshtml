@using System.Web.Optimization
@{
    ViewBag.Title = "Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts { 
    @Styles.Render("~/Content/structure/PaymentPending/DeskCss")   
    @Styles.Render("~/Content/themes/taskflya/PaymentPending/DeskCss")   
    @Scripts.Render("~/Script/PaymentPendingDeskJs") 
}

<h2>PaymentPending</h2>

<div data-bind="foreach:MyPendingFliersList">
    <div class="paymnet-flier">
        <img style="width: 250px" data-bind="bulletinimg: FlierImageUrl, root: $root, alt: Title, imgRetry: FlierImageUrl"/>
        <button data-bind="click:$root.payFlier" class="Button">Pay for Flier</button>
        <div data-bind="text:PendingCredits"></div>
    </div>
    

</div>

Your Current Credit Account Balance <span data-bind="text:$root.currentBrowser.Credits"></span>
@Html.ActionLink("Add More", "AddAccountCredit", "Payment")
@Html.ActionLink("View Transactions", "PaymentTransactions", "Payment")
