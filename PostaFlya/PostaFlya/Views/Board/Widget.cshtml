@using System.Web.Optimization
@using Website.Common.Content



@{
    Layout = null;
}



@Widgets.Write(Html.Partial("Bulletin/SelectedBulletinViewPartial"), Html)
@Widgets.Write(Html.Partial("Bulletin/BulletinList", new List<PostaFlya.Models.Flier.BulletinFlierModel>()), Html)


(function (window, undefined) {

    var bf = window.bf = window.bf || {};

    bf.widgetcss = @Html.Raw(Styles.Render("~/Content/BoardWidget.css").GetHref().ToJsArray());
    bf.widgetsrc = @Html.Raw(Scripts.Render("~/Script/BoardWidget.js").GetScriptSrc().ToJsArray());
    bf.widgetload = function(window, $, undefined){
        
        $(function () {
            var init = bf.pageinit['board-page'];
            if (init === undefined)
                init = bf.pageinit['default'];
            init();

            bf.ScrollToTop();
        });
    };
        
})(window); 


@Html.Partial("Widget/WidgetLoadPartial")
      


