
@using PostaFlya.Models.Flier

@model BulletinFlierSummaryModel

@{var flier = Model;}

<div class="ui-flier-tile addedtile" data-bind="bulletintile: $root.Layout, click: $root.SelectedViewModel.showDetails">     
    
    <div class="tile-image">
        <img class="tile-img bulletin-img" 
                   data-bind="bulletinimg: FlierImageUrl, root: $root, alt: Title, imgRetry: FlierImageUrl"
                   src="@flier.FlierImageUrl"/>
    </div>
    
    <div class="tile-summary">
      
        <div class="tile-description">
            <div class="flier-title" >
                <span data-bind="text: $root.TitleWithDate($data)">@flier.Title</span>
            </div>      
            <div class="flier-locality">
                <a data-bind="click: function () { return true; }, clickBubble: false, attr: { href: (bf.widgetbase ? bf.widgetbase : '') + '/' + VenueBoard.FriendlyId }, text: VenueBoard.Location.PlaceName" href="@flier.VenueBoard.FriendlyId">@flier.VenueBoard.Location.PlaceName</a>        
            </div>
        </div>

    </div>
        
</div>

